@model Technician
@{
    string title = ViewBag.Action + " Technician";
    ViewData["Title"] = title;
}
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<h1>@title</h1>
<form asp-action="Edit" methid="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control">
    </div>
    <input type="hidden" asp-for="TechnicianID" />

    <button type="submit" class="btn-block">Save</button>
    <div>
        <a asp-controller="Technician" asp-action="List" class="btn-danger">Cancel</a>
    </div>

</form>
